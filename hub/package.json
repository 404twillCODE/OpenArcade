{
  "name": "openarcade-hub",
  "version": "0.1.0",
  "description": "Local host hub for OpenArcade",
  "main": "src/index.js",
  "scripts": {
    "postinstall": "npm install --prefix app",
    "start": "npm run build:ui && node src/index.js",
    "build": "npm run build:ui",
    "build:ui": "npm run build --prefix app",
    "dev": "node src/index.js",
    "dev:ui": "npm run dev --prefix app",
    "validate:manifests": "node scripts/validateManifests.js",
    "validate:games": "npm run validate:manifests && node scripts/validateGamePackages.js",
    "healthcheck": "node scripts/healthcheck.js"
  },
  "dependencies": {
    "express": "^4.19.2",
    "ws": "^8.18.0"
  }
}
